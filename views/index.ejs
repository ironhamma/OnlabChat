            '<div class="ytItemThumb" style="background-image: url('+item.snippet.thumbnails.default.url +')"></div>' +
            '<div class="ytItemTitle">' + item.snippet.title + '</div></div>';

            $('#ytResultCont').append(newItem);                      
    })  
    initBtns();
  })  
